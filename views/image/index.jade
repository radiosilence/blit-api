extends ../layout

block extrahead
  title #{user.name.givenName}'s Images

block content
  div.container
    div.row
      div.col-sm-10
        h2 #{user.name.givenName}'s Images
      div.col-sm-2
        form#uploadForm(action='/image/upload', method='post', enctype='multipart/form-data')
          input#uploadImage(name='image', type='file')
          div.form-group
              input#uploadSubmit.btn.btn-primary.pull-right(type='submit', value='Upload')
    div.row
      div.col-sm-12
        table.table.table-striped
          thead
            th Name
            th Width
            th Height
          tbody
            each image, i in images
              tr
                td
                  a(href='/image/#{image._id}') #{image.name}
                td #{image.size.width}
                td #{image.size.height}
  script(src='/upload.js')